generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  address String         @id
  token   TokenBalance[]
}

model TokenBalance {
  userAddress  String
  tokenAddress String
  chainId      Int
  balance      Decimal

  Token TokenMetadata @relation(fields: [tokenAddress, chainId], references: [address, chainId])
  User  User          @relation(fields: [userAddress], references: [address])

  @@id([userAddress, tokenAddress, chainId])
}

model TokenMetadata {
  address  String
  chainId  Int
  name     String
  decimals Int
  symbol   String
  imageUrl String?

  TokenBalance TokenBalance[]
  Transactions Transaction[]

  @@id([address, chainId])
}

model Transaction {
  hash         String
  chainId      Int
  from         String
  to           String
  value        Decimal
  timestamp    DateTime
  tokenAddress String

  TokenMetadata TokenMetadata? @relation(fields: [tokenAddress, chainId], references: [address, chainId])
  @@id([hash, chainId])
}
