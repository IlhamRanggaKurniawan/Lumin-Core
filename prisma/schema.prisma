generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Token {
  address  String
  chainId  Int
  name     String
  decimals Int
  symbol   String
  imageUrl String?

  transactions Transaction[]

  @@id([address, chainId])
}

model Transaction {
  hash      String
  chainId   Int
  from      String
  to        String
  value     Float
  timestamp DateTime

  tokenAddress String?
  Token        Token?  @relation(fields: [tokenAddress, chainId], references: [address, chainId])

  @@id([hash, chainId])
}
